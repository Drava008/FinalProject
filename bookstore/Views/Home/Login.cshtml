
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layoutamdin.cshtml";
}

<div class="container">

    <div class="row mt-5">
        <div class="offset-md-3 col-md-6">
            <div class="card">

                <div class="card-header text-center">
                    <h3>後台登入</h3>
                </div>

                <div class="card-body">

                    <form method="post" class="text-center">
                        <div class="input-group mb-3">
                            <span class="input-group-text">帳號</span>
                            <input class="form-control" placeholder="asdf1234" id="user" name="user" required />
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">密碼</span>
                            <input class="form-control" placeholder="asdf1234" type="password" id="password" name="password" required />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-warning d-block">登入</button>
                        </div>

                        @if (ViewBag.msg != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                                @ViewBag.msg
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>

                        }

                    </form>

                </div>
            </div>
        </div>
    </div>

    

    





</div>